<!DOCTYPE html>
<html lang="en">
<head>
     {{>header}}  
</head>
<body>
    {{>navbar}}

    <!-- main_header  -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                 <div class="row">
                    <div class="col-md-6 col-12 main_header_left mt-4">
                         <p>Welcome to weather app</p>
                         <h4>Get the lates <span class="clr-text">WEATHER</span> INFO OF YOUR CITY </h4>
                         <a href="/weather" ><button class="btn btn-primary">Check Now</button></a>
                    </div>
                    <div class="col-md-6 col-12 main_header_right mt-4">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img class="w-100" height="500" src="images/sunny-day.png" alt="First slide">
                              </div>
                              <div class="carousel-item">
                                <img class="w-100" height="500" src="images/rainy-day.png" alt="Second slide">
                              </div>
                              <div class="carousel-item">
                                <img class="w-100" height="500" src="images/cloudy-day.png" alt="Third slide">
                              </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
    </div>  
    
    <!-- foote -->
   {{>footer}}
</body>
</html>
